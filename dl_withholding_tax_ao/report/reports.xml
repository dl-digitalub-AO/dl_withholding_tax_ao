<odoo>
    <template id="report_invoice_document_inherit_withholding" inherit_id="account.report_invoice_document">
        <!-- Substitui o bloco de totais inteiro para uma estrutura de 2 colunas com resumos -->
        <xpath expr="//div[@id='total']" position="replace">
            <div id="total" class="row">
                <!-- Coluna da Esquerda: Resumo de Retenções -->
                <div class="col-6">
                    <!-- Quadro de Retenções -->
                    <table class="table table-sm" t-if="o.withholding_by_group">
                        <thead>
                            <tr>
                                <th>
                                    <strong>Quadro de Retenções</strong>
                                </th>
                                <th class="text-right">Valor Base</th>
                                <th class="text-right">Valor a Reter</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.withholding_by_group" t-as="wht_group">
                                <td>
                                    <span t-esc="wht_group[0]"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="wht_group[1]" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="wht_group[2]" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Coluna da Direita: Totais Principais (com estrutura original Odoo) -->
                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                    <table class="table table-sm">
                        <!-- Totais de Impostos e Total Geral (standard Odoo) -->
                        <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                        <t t-call="account.document_tax_totals"/>

                        <!-- Linhas de Retenção e Líquido a Pagar -->
                        <t t-if="o.withholding_amount > 0">
                            <tr class="border-black o_total">
                                <td><strong>Retenção na Fonte</strong></td>
                                <td class="text-right">
                                    <span t-field="o.withholding_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black o_total">
                                <td><strong>Líquido a Pagar</strong></td>
                                <td class="text-right">
                                    <span t-field="o.net_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
            </div>
        </xpath>
    </template>
</odoo>