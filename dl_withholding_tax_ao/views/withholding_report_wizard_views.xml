<odoo>
    <record id="view_withholding_report_wizard_form" model="ir.ui.view">
        <field name="name">withholding.report.wizard.form</field>
        <field name="model">withholding.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
                <footer>
                    <button name="print_report" string="Imprimir" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_withholding_report_wizard" model="ir.actions.act_window">
        <field name="name">Mapa de Retenção na Fonte</field>
        <field name="res_model">withholding.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_withholding_report"
              name="Mapa de Retenção na Fonte"
              parent="menu_withholding_root"
              action="action_withholding_report_wizard"
              sequence="20"/>
</odoo>